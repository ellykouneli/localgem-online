{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server: dev (tsx)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": { "NODE_ENV": "development" },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "http://localhost:5050"
      }
    }
  ]
}
